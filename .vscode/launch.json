    "version": "0.2.0",
    "configurations": [
        {
            "name": "Odoo",
            "type": "python",
            "request": "launch",
            "cwd": "/opt/odoo",
            "program": "/opt/odoo/odoo/odoo-bin",
            "args": [
                "--db_host=${env:DB_HOST}",
                "--db_port=${env:DB_PORT}",
                "--db_user=${env:DB_USER}",
                "--db_password=${env:DB_PASSWORD}",
                "--database=${env:DB_NAME}",
                "--limit-time-real=100000"
            ],
            "console": "integratedTerminal"
        }
    ]
}
